</div>
<div class='containerTable'>
    <table>
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">E-mail</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Sujet</th>
                <th scope="col">Etat</th>
                <th scope="col">Action</th>      
            </tr>
        </thead>
        <tbody>
            {{#contact}}
                <tr>
                    <td data-label="Nom">{{last_name}}</td>
                    <td data-label="Prénom">{{first_name}}</td>
                    <td data-label="E-mail">{{email}}</td>
                    <td data-label="Téléphone">{{phone}}</td>
                    <td data-label="Sujet">{{subject}}</td>
                    <td data-label="Etat">{{read}}</td>
                    <td data-label="Action">
                    <a href="readContact/{{id}}">Lire</a>
                    <a href="/deleteContact/?id={{id}}">Supprimer</a>
                    </td>
                </tr>
            {{/contact}}    
        </tbody>
    </table>
